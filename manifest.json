{
    "name": "Pool Defcon Level",
    "version": "1.0",
    "description": "An extension to show the current defcon level of the Customer Services Pool",
    "manifest_version": 2,
    "permissions": [
        "http://*/*",
        "https://*/*",
        "notifications",
        "alarms",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Defcon Level",
        "default_icon": {
            "16": "images/disconnected-16.png",
            "48": "images/disconnected-48.png",
            "128": "images/disconnected-128.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}